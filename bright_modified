           <div class="field">
            <input  type="text"  value="" id="cakeDonut" name="cakeDonut" onchange="updateOrder()"  
                          placeholder="# Cake Donuts" size="90.5">
           </div> 
           <div class="field">
             <input  type="text" value=""  id="glazedDonut" name="glazedDonut" onchange="updateOrder()"  
