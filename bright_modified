       <script>
           function updateOrder(){
                //declare constants
                const TAXRATE = 0.0925;
                const DONUTPRICE =0.5;
                //parse value to avoid number/string from displaying NaN error
                var numCakeDonut= document.getElementById("cakeDonut").value;
                var numGlazeDonut= document.getElementById("glazedDonut").value;
               parseInt(numCakeDonut);
               parseInt(numGlazeDonut);
                    if(isNaN(numCakeDonut))
                         numCakeDonut = 0;
                    if(isNaN(numGlazeDonut))
                         numGlazeDonut=0;     
                //calculations to be processed
                var subTotal= (numCakeDonut + numGlazeDonut) * DONUTPRICE;
                var tax= subTotal * TAXRATE;
                var total=subTotal + tax;
              //automatic display 
            document.getElementById("subTotal").value = "N"+ subTotal.toFixed(2);
            document.getElementById("tax").value ="N"+   tax.toFixed(2) ;
            document.getElementById("total").value ="N";+ total.toFixed(2);
             //validate some form fields
             var pickUpMin;
             if(document.getElementById("name").value=="")
                 alert("Name field is empty!! please, Enter your name");  
                 else if(document.getElementById("pickUpMin").value== ""  || isNaN(document.getElementById("pickUpMin").value)) 
                     alert("pick up minuit field is empty or it is not a number. Please, Enter a time of pick-up");
                  else
               //to submit your order to server
               form.submit();
                 
           }
           
           
       </script>
